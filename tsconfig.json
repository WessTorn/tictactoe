{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "rootDir": "src",

    "moduleResolution": "Node",

    "strict": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "forceConsistentCasingInFileNames": true,
    "noStrictGenericChecks": true
  },
  "include": [
    "src-ts"
  ]
}
